[Unit]
Description=Trident Direct Streaming Service
After=network.target network-online.target systemd-udev-settle.service

[Service]
StandardOutput=journal+console
StandardError=journal+console
ExecStart=/bin/bash -c "curl $(cat /trident_cdrom/direct-streaming.conf | grep URL | cut -d '=' -f 2) -o /tmp/foo.cosi"
Type=oneshot

[Install]
WantedBy=multi-user.target
