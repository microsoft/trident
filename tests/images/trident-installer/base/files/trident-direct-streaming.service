[Unit]
Description=Trident Direct Streaming Service
After=network.target network-online.target systemd-udev-settle.service
Requires=tridentd.socket

[Service]
StandardOutput=journal+console
StandardError=journal+console
ExecStart=/bin/bash -c "echo Running: trident grpc-client stream-image $(cat /trident_cdrom/direct-streaming.conf | grep URL | cut -d '=' -f 2) --hash $(cat /trident_cdrom/direct-streaming.conf | grep HASH | cut -d '=' -f 2) --verbosity DEBUG"
ExecStart=/bin/bash -c "trident grpc-client stream-image $(cat /trident_cdrom/direct-streaming.conf | grep URL | cut -d '=' -f 2) --hash $(cat /trident_cdrom/direct-streaming.conf | grep HASH | cut -d '=' -f 2) --verbosity DEBUG"
Type=oneshot

[Install]
WantedBy=multi-user.target
