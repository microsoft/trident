<domain type="qemu">
    <name>{{ name }}</name>
    <memory unit="GiB">{{ mem }}</memory>
    <vcpu>{{ cpus }}</vcpu>
    <os>
        <type arch='aarch64' machine='virt-6.2'>hvm</type>
        <loader readonly='yes' type='pflash'>/usr/share/AAVMF/AAVMF_CODE.ms.fd</loader>
        <nvram template='/usr/share/AAVMF/AAVMF_VARS.ms.fd'>/var/lib/libvirt/qemu/nvram/{{ name }}_VARS.fd</nvram>
        <boot dev='hd'/>
    </os>
    <sysinfo type="smbios">
        <oemStrings>
            <entry>virtdeploy:1</entry>
        </oemStrings>
    </sysinfo>
    <features>
        <acpi />
        <apic />
    </features>
    <cpu mode='custom' match='exact' check='none'>
        <model fallback='forbid'>cortex-a57</model>
    </cpu>
    <clock offset="utc" />
    <devices>
        <emulator>/usr/bin/qemu-system-aarch64</emulator>

        {% for volume in volumes %}
        <disk type="file" device="disk">
            <driver name="qemu" type="qcow2" />
            <source file="{{ volume.source }}" />
            <target dev="{{ volume.dev }}" bus="virtio" />
            <address type='pci' domain='0x0000' bus='{{loop.index + 6}}' slot='0x00' function='0x0'/>
        </disk>
        {% endfor %}

        {% for cdrom in cdroms %}
        <disk type="file" device="cdrom">
            {% if cdrom.source %}
            <source file="{{ cdrom.source }}" />
            {% endif %}
            <driver name="qemu" type="raw" />
            <target dev="{{ cdrom.dev }}" bus="sata" />
            <readonly />
            <address type="drive" controller="1" bus="0" target="0" unit="{{loop.index}}" />
        </disk>
        {% endfor %}

        <controller type='usb' index='0' model='qemu-xhci' />
        <interface type="network">
            <mac address="{{ mac }}" />
            <source network="{{ network }}" />
            <model type="virtio" />
        </interface>
        <console type="pty" />
        <channel type="spicevmc">
            <target type="virtio" name="com.redhat.spice.0" />
        </channel>
        <input type="tablet" bus="usb" />
        <graphics type="spice" port="-1" tlsPort="-1" autoport="yes">
            <image compression="off" />
        </graphics>
        <redirdev bus="usb" type="spicevmc" />
        <redirdev bus="usb" type="spicevmc" />
        <serial type='pty'>
            <source path='/dev/pts/2' />
            <target port='0' />
            <log file="/tmp/{{ name }}-serial0.log" append="off" />
        </serial>
        {% if enable_tpm %}
        <tpm model="tpm-tis">
            <backend type="emulator" version="2.0" />
        </tpm>
        {% endif %}
    </devices>
</domain>
