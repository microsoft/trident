<volume>
    <name>{{ name }}</name>
    <allocation>0</allocation>
    <capacity unit="G">{{ capacity }}</capacity>
    <target>
        <path>{{ path }}/{{ name }}</path>
        <format type='qcow2' />
        <permissions>
            <owner>107</owner>
            <group>107</group>
            <mode>0744</mode>
            <label>{{ name }}-Volume</label>
        </permissions>
    </target>
</volume>